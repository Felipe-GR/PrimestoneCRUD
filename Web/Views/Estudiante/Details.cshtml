@model Common.Models.Estudiante

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-6">
        <div>
            <h4>Detalle del Estudiante</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nombres)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombres)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Apellidos)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaNacimento)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaNacimento)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Genero)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Genero)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary btn-sm">Edit</a>
            <a asp-action="Index" class="btn btn-success btn-sm">Back to List</a>
        </div>
    </div>
    <div class="col-6">
        <div>            
            <a asp-action="AddDireccion"
                asp-route-id="@Model.ID" class="btn btn-primary btn-sm">Crear Direcciones</a>
            <br />
            <table class="table" style="margin-top: 1rem">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Direcciones.FirstOrDefault().ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direcciones.FirstOrDefault().StringDireccion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direcciones.FirstOrDefault().TipoDireccion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            mmmmmmm
                        </td>
                        <td>
                            mmmm
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
